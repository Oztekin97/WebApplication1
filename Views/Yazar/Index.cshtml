@model IEnumerable<LibraryModel.Models.Yazar>
    <br />
    <br />
    <div class="border p-4 bg-white">
        <div class="row">
            <div class="col-10">
                <h2 class="text-info">Yazarlar Listesi</h2>
            </div>
            <div class="col-3 text-right">
                <a asp-action="Update_Insert" class="btn btn-info form-control">Yeni Yazar Oluştur</a>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>Ad Soyad</th>
                        <th>Doğum Tarihi</th>
                        <th>Lokasyon</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.AdSoyad</td>
                    <td>@item.dogumTarihi</td>
                    <td>@item.Lokasyon</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Update_Insert" asp-route-Id="@item.YazarId">Duzenle</a>
                        <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.YazarId">Sil</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p> !!Listelenecek herhangi bir yazar kaydı bulunamadı!! </p>
            }
        </div>
</div>