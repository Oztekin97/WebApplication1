@model LibraryModel.Models.YayinEvi
@{
    var Title = "YayınEvi Oluştur";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="YayinEviId" />
        @if (Model.YayinEviId != 0)
        {
            //Düzenleme işlemi için başlık
            Title = "YayınEvi Düzenle";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="YayinEviAd"></label>
                </div>
                <div class="col-8">
                    <input asp-for="YayinEviAd" class="form-control" />
                    <span asp-validation-for="YayinEviAd" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="BasimYeri"></label>
                </div>
                <div class="col-8">
                    <input asp-for="BasimYeri" class="form-control" />
                    <span asp-validation-for="BasimYeri" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.YayinEviId != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">YayınEvi Güncelle</button>
                    }
                    else
                    {
                <button type="submit" class="btn btn-primary form-control">YayınEvi Oluştur</button>
                    }
                </div>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
            </div>

        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



