@model LibraryModel.ViewModels.KitapVM
@{
    var Title = "Kitap Oluştur";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Kitap.KitapId" />
        @if (Model.Kitap!= null)
        {
            //Düzenleme işlemi için başlık
            Title = "Kitap Düzenle";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Kitap.KitapAd"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.KitapAd" class="form-control" />
                    <span asp-validation-for="Kitap.KitapAd" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Kitap.Fiyat"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.Fiyat" class="form-control" />
                    <span asp-validation-for="Kitap.Fiyat" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Kitap.ISBN"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kitap.ISBN" class="form-control" />
                    <span asp-validation-for="Kitap.ISBN" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Kitap.YayinEviId"></label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(a => a.Kitap.YayinEviId, Model.YayinEviListesi, "**YayınEvi Listesi**", new { @class = "form-control" })
                        <span asp-validation-for="Kitap.YayinEviId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.Kitap!= null)
                    {
                        <button type="submit" class="btn btn-primary form-control">Kitap Bilgisini Güncelle</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Kitap Oluştur</button>
                    }
                </div>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
            </div>

        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



