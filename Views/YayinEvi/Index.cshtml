@model IEnumerable<LibraryModel.Models.YayinEvi>
<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-10">
            <h2 class="text-info">YayınEvleri Listesi</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-action="Update_Insert" class="btn btn-info form-control">Yayınevi Oluştur</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>YayınEvi Ad</th>
                    <th>Basım Yeri</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.YayinEviAd</td>
                        <td>@item.BasimYeri</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Update_Insert" asp-route-Id="@item.YayinEviId">Duzenle</a>
                            <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.YayinEviId">Sil</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p> !!Listelenecek herhangi bir yayınevi kaydı bulunamadı!! </p>
        }
    </div>
</div>

