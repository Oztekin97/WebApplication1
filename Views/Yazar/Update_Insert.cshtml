@model LibraryModel.Models.Yazar
@{
    var Title = "Yazar Oluştur";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="YazarId" />
        @if (Model.YazarId != 0)
        {
            //Düzenleme işlemi için başlık
            Title = "Yazar Düzenle";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="YazarAd"></label>
                </div>
                <div class="col-8">
                    <input asp-for="YazarAd" class="form-control" />
                    <span asp-validation-for="YazarAd" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="YazarSoyad"></label>
                </div>
                <div class="col-8">
                    <input asp-for="YazarSoyad" class="form-control" />
                    <span asp-validation-for="YazarSoyad" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="dogumTarihi"></label>
                </div>
                <div class="col-8">
                    @if (Model.YazarId != 0)
                    {
                        <input asp-for="dogumTarihi" placeholder="mm/dd/yyyy" id="datepicker_dob" type="text" class="form-control" />
                    }
                    else
                    {
                        <input asp-for="dogumTarihi" placeholder="mm/dd/yyyy" id="datepicker_dob" type="text" class="form-control" />
                    }
                    <span asp-validation-for="dogumTarihi" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Lokasyon"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lokasyon" class="form-control" />
                    <span asp-validation-for="Lokasyon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    @if (Model.YazarId != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Yazar Güncelle</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Yazar Oluştur</button>
                    }
                </div>
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
            </div>

        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
<script>
    $(function () {
        $("#datepicker_dob").datepicker({

        });
    });
</script>
}

